<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_fragment_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/df_currency_delete_tv_title"
        style="@style/style_df_currency_delete_tv"
        android:text="@string/df_currency_delete_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/df_currency_delete_btn_cancel"
        style="@style/style_df_currency_delete_btn"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/df_currency_delete_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/df_currency_delete_btn_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/df_currency_delete_tv_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/df_currency_delete_btn_confirm"
        style="@style/style_df_currency_delete_btn"
        android:layout_marginEnd="24dp"
        android:text="@string/df_currency_delete_confirm"
        app:layout_constraintBottom_toBottomOf="@id/df_currency_delete_btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/df_currency_delete_btn_cancel"
        app:layout_constraintTop_toTopOf="@id/df_currency_delete_btn_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>